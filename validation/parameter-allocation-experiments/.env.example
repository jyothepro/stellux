# Environment variables for Parameter Allocation Experiments
# Copy this file to .env and fill in your values

# Weights & Biases (optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=parameter-allocation-experiments
WANDB_ENTITY=your_wandb_entity

# TensorBoard
TENSORBOARD_LOG_DIR=./logs

# Data paths
DATA_DIR=./data
CHECKPOINT_DIR=./checkpoints
REPORT_DIR=./reports

# Training configuration
CUDA_VISIBLE_DEVICES=0
MIXED_PRECISION=fp16
GRADIENT_CHECKPOINTING=true

# Reproducibility
SEED=42
CUBLAS_WORKSPACE_CONFIG=:4096:8
CUDNN_DETERMINISTIC=1

# Spot instance configuration (optional)
SPOT_INSTANCE_TIMEOUT=3600
CHECKPOINT_INTERVAL=900  # Save every 15 minutes